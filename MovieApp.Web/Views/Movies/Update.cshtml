@model Movie

<h1>Update Movie</h1>
<hr />

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">
        @ViewBag.Message
    </div>
}

<form asp-controller="Movies" asp-action="Update" method="POST">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Movie Title">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description"  class="form-control" placeholder="Description" rows="2"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input asp-for="Director" class="form-control" placeholder="Movie Director">
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control"  placeholder="Movie Poster Url">
    </div>

    <div class="form-group">
        <label asp-for="GenreId"></label>
        <select class="form-control" asp-for="GenreId" asp-items="@ViewBag.Genres">
            <option selected disabled>Please Select</option>
            
        </select>
    </div>
   
    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>