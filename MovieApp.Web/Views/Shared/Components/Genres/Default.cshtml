@model List<Genre>
<ul class="list-group">
    <a href="/movies/list/" class="list-group-item @(ViewBag.SelectedGenre == null ? "active" : "")">
        Tüm Filmler
    </a>

    @foreach (var genre in Model)
    {

        <a  href="/movies/list/@genre.GenreId"
            class="list-group-item @(ViewBag.SelectedGenre == genre.GenreId.ToString() ? "active" : "" )">
              
                        @genre.Name
                
            </a>
      
    }
</ul>